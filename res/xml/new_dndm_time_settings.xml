<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:key="time_setting_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:miui="http://schemas.android.com/apk/res/com.android.settings">
    <EditTextPreference android:persistent="false" android:layout="@layout/preference_ringtone" android:title="@string/rule_name" android:key="key_edittitle" />
    <com.android.settings.dndmode.RepeatPreference android:layout="@layout/dndm_label_preference" android:title="@string/day_of_week" android:key="repeat" />
    <com.android.settings.dndmode.LabelPreference android:persistent="false" android:title="@string/dndm_auto_time_turn_on" android:key="start_time" miui:clickable="true" />
    <com.android.settings.dndmode.LabelPreference android:persistent="false" android:title="@string/dndm_auto_time_turn_off" android:key="end_time" miui:clickable="true" />
    <ListPreference android:persistent="false" android:entries="@array/silent_entries" android:layout="@layout/preference_ringtone" android:title="@string/silent_mode" android:key="silent_mode" android:entryValues="@array/silent_values" />
    <PreferenceCategory android:key="key_quiet_wristband_category">
        <CheckBoxPreference android:persistent="false" android:title="@string/dndm_wristband" android:key="key_quiet_wristband" />
        <Preference android:layout="@layout/custom_preference" />
    </PreferenceCategory>
</PreferenceScreen>