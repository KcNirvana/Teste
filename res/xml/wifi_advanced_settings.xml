<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/wifi_advanced_titlebar"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/wifi_network_optimization" />
    <miui.preference.ValuePreference android:title="@string/wifi_assistant" android:key="wifi_assistant" android:summary="@string/wifi_assistant_summary" android:fragment="com.android.settings.wifi.WifiAssistantSettings" />
    <miui.preference.ValuePreference android:title="@string/wifi_traffic_priority" android:key="wifi_traffic_priority" android:summary="@string/wifi_traffic_priority_summary" android:fragment="com.android.settings.wifi.WifiTrafficPrioritySettings" />
    <PreferenceCategory android:title="@string/wifi_connection_management" />
    <Preference android:persistent="false" android:title="@string/netcheck_title" android:key="network_check" android:summary="@string/main_netcheck_summary" />
    <Preference android:persistent="false" android:title="@string/saved_wifi" android:key="saved_wifi" android:fragment="com.android.settings.wifi.MiuiSavedAccessPointsWifiSettings" />
    <Preference android:persistent="false" android:title="@string/wifi_install_credentials" android:key="install_credentials" />
    <com.android.settings.MiuiListPreference android:persistent="false" android:entries="@array/connect_mode_entries" android:title="@string/connect_mode" android:key="connect_mode" android:summary="@string/connect_mode" android:entryValues="@array/connect_mode_values" />
    <com.android.settings.MiuiListPreference android:persistent="false" android:entries="@array/wifi_frequency_band_entries" android:title="@string/wifi_setting_frequency_band_title" android:key="frequency_band" android:summary="@string/wifi_setting_frequency_band_summary" android:entryValues="@array/wifi_frequency_band_values" />
    <com.android.settings.MiuiListPreference android:persistent="false" android:entries="@array/wifi_sleep_policy_entries" android:title="@string/wifi_setting_sleep_policy_title" android:key="sleep_policy" android:entryValues="@array/wifi_sleep_policy_values" />
    <CheckBoxPreference android:persistent="false" android:title="@string/wifi_scan_always_available" android:key="wifi_scan_always_available" android:summary="@string/wifi_scan_always_available_summary" />
    <com.android.settings.MiuiListPreference android:persistent="false" android:entries="@array/wifi_ssid_type_entries" android:title="@string/select_ssid_type_title" android:key="select_ssid_type" android:entryValues="@array/wifi_ssid_type_values" />
    <com.android.settings.MiuiListPreference android:persistent="false" android:entries="@array/wifi_connect_type_entries" android:title="@string/gsm_to_wifi_connect_type_title" android:key="connect_type" android:entryValues="@array/wifi_connect_type_values" />
    <CheckBoxPreference android:persistent="false" android:title="@string/wifi_dialog_remind_type_title" android:key="dialog_remind_type" />
    <CheckBoxPreference android:persistent="false" android:title="@string/wifi_priority_type_title" android:key="priority_type" android:summary="@string/wifi_priority_type_summary" />
    <Preference android:persistent="false" android:title="@string/wifi_priority_settings_title" android:key="priority_settings" android:summary="@string/wifi_priority_settings_summary" android:dependency="priority_type" />
    <PreferenceCategory android:title="@string/wifi_other_connection_mode">
        <Preference android:persistent="false" android:title="@string/wifi_menu_p2p" android:key="wifi_direct" />
        <Preference android:persistent="false" android:title="@string/wps_connect_title" android:key="wps_connect" android:summary="@string/wps_connect_summary" android:fragment="com.android.settings.wifi.WpsFragment" />
        <Preference android:persistent="false" android:title="@string/wifi_menu_wps_pin" android:key="wps_pin" android:summary="@string/wps_connect_summary" android:fragment="com.android.settings.wifi.WpsFragment" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/wifi_property">
        <Preference android:title="@string/wifi_advanced_mac_address_title" android:key="mac_address" style="?android:attr/preferenceInformationStyle" />
        <Preference android:title="@string/wifi_advanced_ip_address_title" android:key="current_ip_address" style="?android:attr/preferenceInformationStyle" />
    </PreferenceCategory>
</PreferenceScreen>