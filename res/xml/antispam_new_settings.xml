<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:miui="http://schemas.android.com/apk/res/com.miui.securitycenter">
    <CheckBoxPreference android:persistent="false" android:title="@string/st_share_settings" android:key="key_share_settings" />
    <CheckBoxPreference android:persistent="false" android:title="@string/st_title_open_antispam" android:key="key_antispam_enable" />
    <com.miui.antispam.ui.view.LabelPreference android:title="@string/st_msg_settings" android:key="key_msg_intercept" android:dependency="key_antispam_enable" miui:clickable="true" />
    <com.miui.antispam.ui.view.LabelPreference android:title="@string/st_call_settings" android:key="key_call_intercept" android:dependency="key_antispam_enable" miui:clickable="true" />
    <PreferenceCategory android:title="@string/st_group_list_management" android:key="black_white_group" android:dependency="key_antispam_enable">
        <com.miui.antispam.ui.view.LabelPreference android:title="@string/st_title_blacklist_numbers" android:key="key_number_blacklist" android:summary="@string/st_summary_blacklist_numbers" miui:clickable="true" />
        <com.miui.antispam.ui.view.LabelPreference android:title="@string/st_title_whitelist_numbers" android:key="key_number_whitelist" android:summary="@string/st_summary_whitelist_numbers" miui:clickable="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/st_title_settings_other_group" android:key="other_settings_group" android:dependency="key_antispam_enable">
        <com.miui.antispam.ui.view.LabelPreference android:title="@string/st_title_show_antispam_notification" android:key="key_show_antispam_notification" miui:clickable="true" />
        <CheckBoxPreference android:persistent="false" android:title="@string/sms_smart_engine_update" android:key="key_sms_engine_auto_update" />
        <com.miui.antispam.ui.view.LabelPreference android:title="@string/sms_smart_engine_update_now" android:key="key_sms_engine_manual_update" miui:clickable="true" />
    </PreferenceCategory>
</PreferenceScreen>