<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:paddingTop="2.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginEnd="@dimen/minute_rain_fall_action_bar_title_margin_end">
        <ImageView android:gravity="center" android:layout_gravity="left" android:id="@id/back_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/action_bar_back_light" />
        <TextView android:textSize="@dimen/minute_rain_fall_action_bar_title_text_size" android:textColor="#ffffffff" android:ellipsize="end" android:gravity="center" android:id="@id/location_name" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/some_where_on_earth" android:singleLine="true" />
    </LinearLayout>
    <FrameLayout android:layout_gravity="end|center" android:id="@id/feedback_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingEnd="@dimen/minute_rain_fall_feedback_btn_margin_end">
        <TextView android:textSize="@dimen/minute_rain_fall_action_bar_title_text_size" android:textColor="#ffffffff" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/minute_rain_feedback_text" />
    </FrameLayout>
</FrameLayout>