        <LinearLayout android:gravity="center_vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:textSize="@dimen/single_line_list_primary_text_size" android:textColor="@color/list_secondary_text_color" android:ellipsize="end" android:id="@id/banner_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
