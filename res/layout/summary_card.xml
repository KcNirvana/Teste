            <TextView android:textSize="@dimen/list_secondary_text_size" android:textColor="@color/huangli_ji_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/small_margin" android:text="@string/huangli_bad_type" />
