<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:paddingTop="@dimen/date_calculate_description_padding_top" android:paddingBottom="@dimen/date_calculate_description_padding_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/dateCalculateListItemStyle">
                <TextView android:id="@id/description" android:text="@string/date_interval_description" style="@style/dateCalculateTitleTextStyle" />
            </LinearLayout>
            <LinearLayout android:id="@id/date_start_row" style="@style/dateCalculateListItemStyle">
                <TextView android:textColor="#99000000" android:id="@id/from_label" android:text="@string/date_interval_start" style="@style/dateCalculateListItemPrimaryTextStyle" />
                <TextView android:textSize="@dimen/date_calculate_start_text_size" android:textColor="#ff000000" android:id="@id/start_date" style="@style/eventInfoListItemSecondaryDateTextStyle" />
            </LinearLayout>
            <LinearLayout android:id="@id/date_end_row" style="@style/dateCalculateListItemStyle">
                <TextView android:textColor="#99000000" android:id="@id/to_label" android:text="@string/date_interval_end" style="@style/dateCalculateListItemPrimaryTextStyle" />
                <TextView android:textSize="@dimen/date_calculate_start_text_size" android:textColor="#ff000000" android:id="@id/end_date" style="@style/eventInfoListItemSecondaryDateTextStyle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_gravity="bottom|center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/date_calculate_start_margin">
        <Button android:textColor="#ffffffff" android:id="@id/date_calculate_start" android:background="@drawable/date_calculate_btn" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/start_date_calculate" />
    </LinearLayout>
</LinearLayout>