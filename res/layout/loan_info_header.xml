            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:layout_marginBottom="@dimen/card_normal_margin" android:layout_alignParentBottom="true" style="@style/CardContentLayoutStyle">
            <TextView android:textSize="@dimen/list_secondary_text_size" android:textColor="#ccffffff" android:id="@id/system_date" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <TextView android:textSize="@dimen/list_secondary_text_size" android:textColor="#ccffffff" android:id="@id/repayment_date" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>