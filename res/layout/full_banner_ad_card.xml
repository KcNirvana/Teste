<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/CardLayoutStyle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/root" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.miui.calendar.view.OnlineImageView android:id="@id/image" android:layout_width="fill_parent" android:layout_height="@dimen/full_banner_ad_image_height" android:scaleType="fitXY" />
        <LinearLayout android:gravity="center|right|top" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:gravity="center|right|top" android:id="@id/close" android:layout_width="@dimen/image_button_min_width" android:layout_height="@dimen/image_button_min_height">
                <ImageView style="@style/FullBannerAdCloseImageStyle" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>