<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/allscreen_bg_press" />
            <padding android:left="@dimen/allscreen_card_body_left" android:top="@dimen/allscreen_card_body_top" android:right="@dimen/allscreen_card_body_left" android:bottom="@dimen/allscreen_card_body_bottom" />
            <corners android:bottomLeftRadius="@dimen/allscreen_card_radius" android:bottomRightRadius="@dimen/allscreen_card_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/allscreen_bg" />
            <padding android:left="@dimen/allscreen_card_body_left" android:top="@dimen/allscreen_card_body_top" android:right="@dimen/allscreen_card_body_left" android:bottom="@dimen/allscreen_card_body_bottom" />
            <corners android:bottomLeftRadius="@dimen/allscreen_card_radius" android:bottomRightRadius="@dimen/allscreen_card_radius" />
        </shape>
    </item>
</selector>