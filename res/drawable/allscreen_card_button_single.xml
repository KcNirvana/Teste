<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/allscreen_bg_press" />
            <corners android:bottomLeftRadius="@dimen/allscreen_card_radius" android:bottomRightRadius="@dimen/allscreen_card_radius" />
            <padding android:top="@dimen/allscreen_card_button_top" android:bottom="@dimen/allscreen_card_button_bottom" />
            <stroke android:width="@dimen/allscreen_card_gap_width" android:color="@color/card_divider_line" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/allscreen_bg" />
            <corners android:bottomLeftRadius="@dimen/allscreen_card_radius" android:bottomRightRadius="@dimen/allscreen_card_radius" />
            <padding android:top="@dimen/allscreen_card_button_top" android:bottom="@dimen/allscreen_card_button_bottom" />
            <stroke android:width="@dimen/allscreen_card_gap_width" android:color="@color/card_divider_line" />
        </shape>
    </item>
</selector>